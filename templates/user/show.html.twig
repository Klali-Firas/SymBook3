{% extends 'base.html.twig' %}

{% block title %}Utilisateur
{% endblock %}

{% block body %}
	<h1>Utilisateur</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ user.id }}</td>
			</tr>
			<tr>
				<th>Email</th>
				<td>{{ user.email }}</td>
			</tr>
			<tr>
				<th>Rôles</th>
				<td>
					{% for role in user.roles %}
						<span class="badge bg-primary">{{ role }}</span>
					{% endfor %}
				</td>

			</tr>

			<tr>
				<th>EstVérifié</th>
				<td>{{ user.isVerified ? 'Oui' : 'Non' }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('app_user_index') }}">retour à la liste</a>

	<a href="{{ path('app_user_edit', {'id': user.id}) }}">modifier</a>

	{{ include('user/_delete_form.html.twig') }}
{% endblock %}
