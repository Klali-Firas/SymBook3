{% extends 'base.html.twig' %}

{% block title %}
	{{ livre.titre }}
	- Détails du Livre
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
	<style>
		/* Custom styles */
		.livre-details {
			padding-top: 50px;
			padding-bottom: 50px;
		}

		.livre-details .livre-title {
			font-size: 2.5rem;
			font-weight: bold;
			color: #333;
		}

		.livre-details .livre-meta {
			font-size: 1.2rem;
			color: #777;
			margin-bottom: 20px;
		}

		.livre-details .livre-price {
			font-size: 1.5rem;
			font-weight: bold;
			color: #333;
			margin-bottom: 20px;
		}

		.livre-details .livre-image {
			max-width: 100%;
			height: auto;
			border-radius: 8px;
			box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
		}

		.livre-details .livre-summary {
			font-size: 1.2rem;
			color: #555;
		}

		.livre-details .btn-add-to-cart {
			background-color: #007bff;
			color: #fff;
			border: none;
			padding: 10px 20px;
			border-radius: 5px;
			font-size: 1.2rem;
			transition: all 0.3s ease;
		}

		/* .livre-details .btn-add-to-cart:hover {
			background-color: #0056b3;
		} */
	</style>
{% endblock %}

{% block body %}
	<section class="livre-details">
		<div class="container">
			<div class="row">
				<div class="col-lg-6">
					<img src="{{ asset(livre.image) }}" alt="{{ livre.titre }}" class="livre-image">
				</div>
				<div class="col-lg-6">
					<h1 class="livre-title">{{ livre.titre }}</h1>
					<p class="livre-meta">
						<strong>ISBN:</strong>
						{{ livre.ISBN }}</p>
					<p class="livre-meta">
						<strong>Éditeur:</strong>
						{{ livre.Editeur }}</p>
					<p class="livre-meta">
						<strong>Catégorie:</strong>
						{{ livre.categorie.libelle }}</p>
					<p class="livre-price">
						<strong>Prix:</strong>
						{{ livre.prix }}
						€</p>
					<p class="livre-summary">
						<strong>Résumé:</strong>
						{{ livre.resume }}</p>
					<a href="{{url('app_article',{'livre':livre.id})}}" class="btn btn-add-to-cart">

						<i class="fas fa-cart-plus"></i>
						Ajouter au Panier</a>
				</div>
			</div>
		</div>
	</section>
{% endblock %}
